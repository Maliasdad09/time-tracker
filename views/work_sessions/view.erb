<h1><%= work_session.description %></h1>
<p><%= work_session.date %></p>
<p><%= work_session.project_name %></p>
<span><%= work_session.start_time %></span><span><%= work_session.end_time %></span>

<form action="/work_sessions/<%= work_session.id %>" method="post">
  <div>
    <input  type="hidden" name="_method" value="delete" />
    <button type="submit" class="btn btn-danger">Delete this Work Session</button>
  </div>
</form>

<a href="/work_sessions/<%= work_session.id %>/edit"><button class="btn btn-info">Edit this Work Session</button>
